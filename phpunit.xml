<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src/filter/</directory>
            <directory>src/request/</directory>
            <directory>src/</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-xml" target="tests/logs/xml"/>
        <log type="coverage-clover" target="tests/logs/coverage.clover"/>
        <log type="coverage-html" target="tests/logs/html" charset="UTF-8" yui="true" highlight="true" lowUpperBound="50" highLowerBound="80"/>
    </logging>
</phpunit>
